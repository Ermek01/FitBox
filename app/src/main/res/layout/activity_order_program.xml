<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    tools:context=".ui.activities.OrderProgramActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_send"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="314dp"
                android:focusable="false"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_nutrition_1" />

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_display"
                android:text="Заказать индивидуальну программу питания"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:textFontWeight="600"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/news_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="600"
                android:fontFamily="@font/sf_ui_display"
                android:text="Твои дельты - это ключ ко всему. Не пренебрегай ими. Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit. Exercitation veniam consequat sunt nostrud amet."
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:layout_marginTop="25dp"
                android:layout_marginStart="17dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/news_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_display"
                android:text="Оставьте заявку и мы Вам перезвоним"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:layout_marginTop="25dp"
                android:layout_marginStart="17dp"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:hint="Имя"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="11dp"
                android:textColorHint="#B3FFFFFF"
                android:textColor="#B3FFFFFF"
                android:fontFamily="@font/sf_ui_display"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:backgroundTint="#59FFFFFF"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="E-mail"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="11dp"
                android:textColorHint="#B3FFFFFF"
                android:textColor="#B3FFFFFF"
                android:fontFamily="@font/sf_ui_display"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:backgroundTint="#59FFFFFF"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Телефон"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="11dp"
                android:textColorHint="#B3FFFFFF"
                android:textColor="#B3FFFFFF"
                android:fontFamily="@font/sf_ui_display"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:backgroundTint="#59FFFFFF"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Рост"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="11dp"
                android:textColorHint="#B3FFFFFF"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/sf_ui_display"
                android:textFontWeight="400"
                android:backgroundTint="#59FFFFFF"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Вес"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="11dp"
                android:textColorHint="#B3FFFFFF"
                android:textColor="#B3FFFFFF"
                android:fontFamily="@font/sf_ui_display"
                android:textSize="12sp"
                android:textFontWeight="400"
                android:backgroundTint="#59FFFFFF"
                />

            <TextView
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_create_questionnaire"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="14dp"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/btn_send"
        android:layout_width="311dp"
        android:layout_height="38dp"
        android:background="@drawable/bg_button_next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Отправить"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_ui_display"
            android:textSize="18sp"

            android:textFontWeight="600"/>

    </RelativeLayout>

</RelativeLayout>