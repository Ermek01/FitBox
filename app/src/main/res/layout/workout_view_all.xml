<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?colorPrimary"
    android:layout_marginBottom="15dp">

    <TextView
        android:id="@+id/item_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/card"
        android:layout_toRightOf="@+id/card"
        android:fontFamily="@font/sf_ui_display"
        android:text="Круговые вращения руками"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/card"
        android:fontFamily="@font/sf_ui_display"
        android:text="30 сек"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/card"
        android:layout_alignBottom="@id/card"
        android:orientation="vertical"
        android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/txt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_display"
            android:text="Начать"
            android:textColor="#5282FF"
            android:textFontWeight="400"
            android:textSize="15sp" />

        <View
            android:layout_width="71dp"
            android:layout_height="1dp"
            android:background="#5282FF"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="134dp"
        android:layout_height="102dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="134dp"
            android:layout_height="102dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/radius"
            android:src="@drawable/img_workout" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/play" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>