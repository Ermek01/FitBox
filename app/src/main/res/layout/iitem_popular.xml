<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="?colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_all"
            >

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Все тело"
                android:textColor="@color/white"
                android:layout_marginStart="11dp"
                android:fontFamily="@font/sf_ui_display"
                android:textFontWeight="600"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:text="В тренировке равномерно задействованы все мышечные группы, комплексная  тренировка проработает все тело целиком"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/sf_ui_display"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/all"/>

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Начать"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/sf_ui_display"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/desc"/>

            <View
                android:layout_width="99dp"
                android:layout_height="1dp"
                android:layout_below="@id/start"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>

</androidx.cardview.widget.CardView>