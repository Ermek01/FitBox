<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="174dp"
    android:layout_marginBottom="12dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radius_relative_layout"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_nutrition"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="174dp"
            android:background="#8C000000"
            />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Похудеть или набрать"
            android:textColor="@color/white"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sf_ui_display"
            android:textFontWeight="600"
            android:textSize="28dp"/>

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:text="Теоритическая часть по снижению или набору веса и калькуляторы индекса массы тела и рассчета каллорий."
            android:layout_below="@id/txt_name"
            android:layout_marginStart="11dp"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_ui_display"
            android:textFontWeight="400"/>

        <RelativeLayout
            android:layout_width="139dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_button_next"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="14dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Посмотреть"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>